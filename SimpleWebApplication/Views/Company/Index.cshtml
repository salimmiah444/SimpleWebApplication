@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add new Company</h2>

<div ng-app="sampleApplication" ng-controller="companyCtrl">


    <div class="row">

        <div class="col-lg-12">

            <form ng-submit="sendPost()">

                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        Company Name <br />
                        <input ng-model="name" class="input-lg" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        Country Name <br />

                        <select ng-model="countryId"
                                ng-options="country.id as (country.name) for country in chooseCountries"></select>
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        <button type="submit" class="btn">Send</button>
                    </div>
                </div>


            </form>
        </div>

    </div>

    <h2>List of Companies</h2>
    <div class="row" style="padding-top: 50px">

        <div class="col-lg-12">
            <table class="table-striped" style="width: 100%">
                <tr>
                    <th>
                        Name
                    </th>

                    <th>
                        Country
                    </th>
                </tr>
                <tr ng-repeat="x in companies">
                    <td>{{ x.name }}</td>
                    <td>{{ x.country.name }}</td>
                </tr>
            </table>

        </div>

    </div>


</div>


<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="~/Scripts/site.js"></script>
